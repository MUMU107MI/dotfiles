## general settings for Windows Git
#
[core]
	autocrlf = input
	symlinks = true
	editor = "c:/bin/vim/bin/vim.exe"

[pull]
	ff = only

[fetch]
	prune = true

[credential]
	helper = manager


[credential "helperselector"]
	selected = store


